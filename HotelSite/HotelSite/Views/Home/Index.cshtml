
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_CommonLayout.cshtml";
}
<div class="slider">
    <div class="container">
        <div class="row">
            <div class="home-search">
                <h2>Book on India's Largest Hotel Booking Platform</h2>
                <div class="search-base">
                    <span>HOTEL</span>
                    <form class="form-inline" action="/action.php">
                        <div class="form-fields">
                            <div class="form-group">
                                <input type="text" id="seachBox" class="form-control" required>
                                <label class="form-control-placeholder" for="seachBox">Select City, Location or Hotel</label>
                                <i class="fa fa-map-marker icon"></i>
                            </div>
                            <div class="form-group">
                                <input type="text" id="checkin" readonly class="form-control" required>
                                <label class="form-control-placeholder" for="checkin">Check-in</label>
                                <i class="fa fa-calendar icon"></i>
                            </div>
                            <div class="form-group">
                                <input type="text" id="checkout" readonly class="form-control" required>
                                <label class="form-control-placeholder" for="checkout">Check-out</label>
                                <i class="fa fa-calendar icon"></i>
                            </div>
                            <div class="form-group">
                                <input type="text" id="room" readonly class="form-control" required>
                                <label class="form-control-placeholder" for="room">1 Pepole 2 Room</label>
                                <img src="~/Content/images/sort-down.svg" class="img-icon" />
                            </div>
                        </div>
                    </form>

                   
                </div>
            </div>
            <div id="calendar" class="calendar"></div>
        </div>
    </div>
</div>


