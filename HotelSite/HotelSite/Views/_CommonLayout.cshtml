        $('.calendar').pignoseCalendar({
            multiple: false,
            theme: 'blue',
            toggle: false,
            format: 'DD-MMM-YYYY',
            minDate: finalDate,
            select: function (dates, context) {
                context.context.settings.multiple = true;
                $('.cal_base').css('margin-left', '190px')
