        function removeDiv(id) {
            $('.room_base').each(function () {
                var dID = $(this).find('.room_list').attr('id');
                if (dID == id) {
                    $(this).find('.room_list').remove();
                }
            });
            divId = divId - 1;
            children = children - 1;
            adultQuant = adultQuant - 1;
            childQuant = childQuant - 1;
            html = '';
            addRoom(0);
        };


        function filterLocation(key) {
            var states = getJsonData('../../Location Data/states.json');
            var citiess = getJsonData('../../Location Data/cities.json');
            var finalResult = {};
            var result1 =
                $.grep(states.states, function (item, i) {
                    return (item.name.toLowerCase().indexOf(key.toLowerCase()) !== -1);//&& item.country_id == '101'
                });
            var result2 =
                $.grep(citiess.cities, function (item, i) {
                    return (item.name.toLowerCase().indexOf(key.toLowerCase()) !== -1);
                });

            var result3 = GetHotel(key);
            finalResult['state'] = result1.slice(0, 5);
            finalResult['city'] = result2.slice(0, 5);
            finalResult['Hotel'] = result3.slice(0, 3);
            var div = document.getElementById("search_box");
            var html = "";
            html = "<ul>";
            var title = "";
            if (finalResult != null || finalResult != "") {
                $.each(finalResult, function (i, item) {
                    title = toTitleCase(i);
                    if (finalResult[i].length > 0) {
                        html += '<li><div class="search_header"><i class="fa fa-building"></i>' + title + '</div></li>';
                        $.each(item, function (j, val) {
                            if (j <= 5) {
                                if (i != "Hotel") {
                                    html += '<li><a href="javascript:void(0)" onclick="getSearchValue(this);">' + ((val.name.indexOf(toTitleCase(key)) > -1) ? val.name.replace(toTitleCase(key), '<b class="seach-match">' + toTitleCase(key) + '</b>') : val.name.replace(key, '<b class="seach-match">' + key + '</b>')) + '</a></li>';
                                }
                                else {
                                    html += '<li><a href="javascript:void(0)" onclick="getSearchValue(this);">' + ((val.HotelName.indexOf(toTitleCase(key)) > -1) ? val.HotelName.replace(toTitleCase(key), '<b class="seach-match">' + toTitleCase(key) + '</b>') : val.HotelName.replace(key, '<b class="seach-match">' + key + '</b>')) + '</a></li>';
                                }
                            }
                        });
                    }
                });
            }
            else {
                html += '<li><a href="javascript:void(0)">No match found (' + key + ').</a></li>';
            }
            html += "</ul>";
            $("#search_box").append(html);
            document.getElementById("search_box").innerHTML = html;

        }
        function GetHotel(key) {
            var hotelData = $.grep(JSON.parse($.cookie('HotelData'))["Table"], function (item, i) {
                return ((item.HotelName.toLocaleLowerCase().indexOf(key) > 0) ? item.HotelName : "");
            });
            return hotelData;
        }
        function toTitleCase(str) {
            str = str.toLowerCase().replace(/\b[a-z]/g, function (letter) {
                return letter.toUpperCase();
            });
            return str;
        }

        function HotelNameFilter(keyVal, ID) {

            $.ajax
                ({
                    type: 'POST',
                    url: "@Url.Action("GetHotelName","Home")",
                    contentType: "application/json",
                    data: JSON.stringify({ Searchkey: keyVal }),
                    success: function (data) {
                        $("#" + ID).empty();
                        var html = "";
