                            });
                        }
                        else {
                            html += "<li><a href='javascript:void(0)'>No match found</a></li>"
                        }
                        html += "</ul>";
                        $("#" + ID).append(html);
                        if (keyVal != "") {
                            $("#hotelFilter").css("display", "block");
                            $("#hotelData").css("display", "block");
                        }
                        else {
                            $("#hotelFilter").css("display", "none");
                            $("#hotelData").css("display", "none");
                        }
                    }
                })
        }
        function GetCacheHotelData(key) {
            var hoteldata;
            $.ajax({
                type: 'POST',
                url: "@Url.Action("GetHotelData","Home")",
                contentType: "application/json",
                async: false,
                data: JSON.stringify({ Searchkey: key }),
                success: function (data) {
                    hoteldata = data;
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    console.log(textStatus + "\n" + errorThrown);
                }
            });
            $.cookie('HotelData', hoteldata, { expires: 7, path: '/' });
         //   return hoteldata["Table"];
        }
